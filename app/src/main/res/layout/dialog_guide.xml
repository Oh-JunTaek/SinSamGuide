<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewGuideDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_guide_description"
        android:padding="8dp" />

    <Button
        android:id="@+id/btnBasicGuide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="기본가이드"
        android:backgroundTint="#8BC34A"
        android:padding="8dp" />

    <Button
        android:id="@+id/btnDeveloperTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제작자Tip"
        android:backgroundTint="#8BC34A"
        android:padding="8dp" />

    <Button
        android:id="@+id/btnUserTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="유저Tip"
        android:backgroundTint="#8BC34A"
        android:padding="8dp" />

</LinearLayout>
